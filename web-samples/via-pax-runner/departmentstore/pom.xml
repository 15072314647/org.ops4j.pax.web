    <org.ops4j.pax.web.ssl.keystore>../.keystore</org.ops4j.pax.web.ssl.keystore>
    <org.ops4j.pax.web.ssl.password>paxweb</org.ops4j.pax.web.ssl.password>
    <org.ops4j.pax.web.ssl.keypassword>paxweb</org.ops4j.pax.web.ssl.keypassword>
