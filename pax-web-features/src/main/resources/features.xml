<?xml version="1.0" encoding="UTF-8"?>
<features name="org.ops4j.pax.web-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">

  <feature name="undertow" description="Undertow Servlet Container" version="${project.version}" resolver="(obr)" start-level="40">
    <bundle dependency="true">mvn:javax.servlet/javax.servlet-api/3.1.0</bundle>
    <bundle dependency="true">mvn:javax.annotation/javax.annotation-api/1.2</bundle>
    <bundle dependency="true">mvn:org.jboss.logging/jboss-logging/3.1.4.GA</bundle>
    <bundle>mvn:org.ops4j.pax.tipi/org.ops4j.pax.tipi.undertow.core/1.1.0.1</bundle>
    <bundle>mvn:org.ops4j.pax.tipi/org.ops4j.pax.tipi.undertow.servlet/1.1.0.1</bundle>
    <bundle>mvn:org.ops4j.pax.tipi/org.ops4j.pax.tipi.xnio.api/3.3.0.1</bundle>
    <bundle>mvn:org.ops4j.pax.tipi/org.ops4j.pax.tipi.xnio.nio/3.3.0.1</bundle>
  </feature>

  <feature name="pax-web-undertow" description="Web Extender based on Undertow" version="${project.version}" resolver="(obr)" start-level="40">
    <feature>scr</feature>
    <feature>eventadmin</feature>
    <feature>undertow</feature>
    <bundle dependency="true">mvn:org.ow2.asm/asm-all/5.0.3</bundle>
    <bundle dependency="true">mvn:org.apache.xbean/xbean-bundleutils/3.18</bundle>
    <bundle dependency="true">mvn:org.apache.xbean/xbean-finder/3.18</bundle>
    <bundle dependency="true">mvn:org.osgi/org.osgi.compendium/5.0.0</bundle>
    <bundle dependency="true">mvn:org.ops4j.base/ops4j-base/${version.ops4j.base}</bundle>
    <bundle dependency="true">mvn:org.apache.felix/org.apache.felix.jaas/0.0.2</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-spi/${project.version}</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-extender/${project.version}</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-undertow/${project.version}</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-descriptor/${project.version}</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-jaas/${project.version}</bundle>
  </feature>
  
  <feature name="pax-web-jsp" description="JSP Support for Pax Web" version="${project.version}" resolver="(obr)" start-level="40">
    <bundle dependency="true">mvn:org.glassfish/javax.el/3.0.0</bundle>
    <bundle dependency="true">mvn:javax.servlet/javax.servlet-api/3.1.0</bundle>
    <bundle dependency="true">mvn:javax.servlet.jsp/javax.servlet.jsp-api/2.3.1</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-jsp/${project.version}</bundle>
    <!-- wrap: is a workaround for KARAF-3232 -->
    <bundle>wrap:mvn:org.eclipse.jdt.core.compiler/ecj/4.4</bundle>
  </feature>
  
  <feature name="jsf-mojarra" description="JSF Reference Implementation Mojarra" version="2.2.8" resolver="(obr)" start-level="40">
    <bundle dependency="true">mvn:javax.servlet/javax.servlet-api/3.1.0</bundle>
    <bundle dependency="true">mvn:org.apache.geronimo.specs/geronimo-atinject_1.0_spec/1.0</bundle>
    <bundle dependency="true">mvn:javax.validation/validation-api/1.1.0.Final</bundle>
    <bundle dependency="true">mvn:javax.interceptor/javax.interceptor-api/1.2</bundle>
    <bundle dependency="true">mvn:javax.enterprise/cdi-api/1.2</bundle>
    <bundle dependency="true">mvn:javax.servlet.jsp/javax.servlet.jsp-api/2.3.1</bundle>
    <bundle dependency="true">mvn:javax.servlet.jsp.jstl/javax.servlet.jsp.jstl-api/1.2.1</bundle>
    <bundle>mvn:org.glassfish.web/javax.servlet.jsp.jstl/1.2.3</bundle>
    <bundle>mvn:org.glassfish/javax.el/3.0.0</bundle>
    <bundle>mvn:org.glassfish/javax.faces/2.2.8</bundle>
  </feature>

  <feature name="pax-web-undertow-cdi-1.1-weld" description="Pax CDI with Undertow and CDI 1.1 (Weld)" version="${project.version}" resolver="(obr)" start-level="40">
    <feature>pax-web-undertow</feature>
    <feature>pax-cdi-1.2-weld</feature>
    <bundle dependency="true">mvn:org.glassfish/javax.el/3.0.0</bundle>
    <bundle dependency="true">mvn:javax.servlet.jsp/javax.servlet.jsp-api/2.3.1</bundle>
    <bundle>mvn:org.ops4j.pax.cdi/pax-cdi-servlet/${version.pax.cdi}</bundle>
    <bundle>mvn:org.ops4j.pax.cdi/pax-cdi-undertow-weld/${version.pax.cdi}</bundle>
  </feature>
  
  <feature name="pax-web-undertow-cdi-1.2-weld" description="Pax Web with Undertow and CDI 1.2 (Weld)" version="${project.version}" resolver="(obr)" start-level="40">
    <feature>pax-web-undertow</feature>
    <feature>pax-cdi-1.2-weld</feature>
    <bundle dependency="true">mvn:org.glassfish/javax.el/3.0.0</bundle>
    <bundle dependency="true">mvn:javax.servlet.jsp/javax.servlet.jsp-api/2.3.1</bundle>
    <bundle>mvn:org.ops4j.pax.cdi/pax-cdi-servlet/${version.pax.cdi}</bundle>
    <bundle>mvn:org.ops4j.pax.cdi/pax-cdi-undertow-weld/${version.pax.cdi}</bundle>
  </feature>
  
  <feature name="pax-web-war" description="Pax Web file system deployment for web archives" version="${project.version}" resolver="(obr)" start-level="40">
    <feature>pax-web-undertow</feature>
    <bundle dependency="true">mvn:org.ops4j.pax.url/pax-url-war/${version.pax.url}</bundle>
    <bundle>mvn:org.ops4j.pax.web/pax-web-deployer/${project.version}</bundle>
  </feature>
  
</features>
