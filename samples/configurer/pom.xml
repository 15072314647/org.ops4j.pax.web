<?xml version='1.0' encoding='UTF-8' ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <name>Pax Web Service - Samples - Configurer</name>

  <modelVersion>4.0.0</modelVersion>

  <groupId>org.ops4j.pax.web.samples</groupId>
  <artifactId>configurer</artifactId>
  <version>0.1.0-SNAPSHOT</version>

  <properties>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
  </properties>

  <packaging>pom</packaging>

  <modules>
    <module>poms</module>
    <module>org.ops4j.pax.web.bundles.service</module>
    <module>org.ops4j.pax.logging.api</module>
    <module>org.ops4j.pax.logging.service</module>
    <module>org.ops4j.pax.logging.jcl</module>
    <module>org.ops4j.pax.logging.slf4j</module>
    <module>configurer.simple</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <!-- help find the right 'pax' plugin -->
        <groupId>org.ops4j.pax.construct</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <inherited>false</inherited>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>ops4j-repository</id>
      <url>http://repository.ops4j.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>ops4j-repository</id>
      <url>http://repository.ops4j.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
