<?xml version='1.0' encoding='UTF-8' ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <name>${project.artifactId} [${bundle.package}]</name>

  <parent>
    <relativePath>../poms/compiled/</relativePath>
    <groupId>org.ops4j.pax.web.build</groupId>
    <artifactId>compile-bundle</artifactId>
    <version>0.3.0-SNAPSHOT</version>
  </parent>

  <properties>
    <bundle.package>org.ops4j.pax.web.service</bundle.package>
  </properties>
  <description>Pax Web is a OSGi Http Service based on Jetty 6</description>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.ops4j.pax.web.bundles</groupId>
  <artifactId>service</artifactId>
  <version>0.3.0-SNAPSHOT</version>

  <packaging>bundle</packaging>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>
      <plugin>
          <groupId>org.ops4j.pax.maven</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <extensions>true</extensions>
          <configuration>
            <instructions>
              <Import-Package>org.apache.commons.logging;resolution:=optional,*</Import-Package>
              <Export-Package>!${bundle.package}.internal,${bundle.package}.*;version="${project.version}",javax.servlet.*;version="2.5"</Export-Package>
              <Private-Package>${bundle.package}.internal,org.apache.commons.logging</Private-Package>
            </instructions>
          </configuration>
      </plugin>
      <plugin>
        <groupId>org.ops4j.pax.construct</groupId>
        <artifactId>maven-pax-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>servlet-api-2.5</artifactId>
      <version>6.1.3</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty</artifactId>
      <version>6.1.3</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty-util</artifactId>
      <version>6.1.3</version>
      <scope>compile</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>

</project>
